{
  "private": true,
  "name": "chungmin",
  "version": "0.3.1",
  "license": "MIT",
  "scripts": {
    "build": "preact build --prerenderUrls ./prerender-urls.js",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch  --prerenderUrls ./prerender-urls.js",
    "lint": "eslint src",
    "test": "jest",
    "upgrade": "ncu -u && pnpm i && pnpm build && git add . && git commit -m ':arrow_up: Dependencies' && pnpm version patch"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.3.0",
    "eslint": "^8.8.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^27.5.0",
    "jest-preset-preact": "^4.0.5",
    "preact-cli": "^3.3.4",
    "sirv-cli": "2.0.2"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@tailwindcss/typography": "^0.5.1",
    "@types/react": "^17.0.39",
    "autoprefixer": "^10.4.2",
    "graphql": "^16.3.0",
    "markdown-to-jsx": "^7.1.6",
    "postcss": "8.4.6",
    "preact": "^10.6.5",
    "preact-cli-plugin-netlify": "^1.6.0",
    "preact-render-to-string": "^5.1.19",
    "preact-router": "^4.0.1",
    "react": "npm:preact@^10.6.5",
    "react-dom": "npm:preact@^10.6.5",
    "tailwindcss": "3.0.18",
    "typescript": "^4.5.5"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  },
  "pnpm": {
    "overrides": {
      "ansi-regex@>2.1.1 <5.0.1": ">=5.0.1",
      "nth-check@<2.0.1": ">=2.0.1",
      "glob-parent@<5.1.2": ">=5.1.2",
      "postcss@<8.2.13": ">=8.2.13",
      "node-forge@<1.0.0": ">=1.0.0",
      "trim@<0.0.3": ">=0.0.3",
      "react@^15.0.0": "8.0.0",
      "cssnano@<5.0.0": ">=5.0.15"
    }
  }
}
