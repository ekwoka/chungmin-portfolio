{
  "private": true,
  "name": "chungmin",
  "version": "0.8.13",
  "license": "MIT",
  "scripts": {
    "build": "preact build --prerenderUrls ./prerender-urls.js",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "open http://0.0.0.0:8080/; preact watch  --prerenderUrls ./prerender-urls.js",
    "lint": "eslint src && prettier --check .",
    "lint-fix": "eslint src --fix && prettier --write .",
    "test": "jest",
    "upgrade": "ncu -u && pnpm i && prettier --write pnpm-lock.yaml && pnpm build && git commit -S -am ':arrow_up: Dependencies' && pnpm version patch"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.4.0",
    "eslint": "^8.10.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^27.5.1",
    "jest-preset-preact": "^4.0.5",
    "postcss": "8.4.7",
    "preact-cli": "^3.3.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "sirv-cli": "2.0.2",
    "tailwindcss": "3.0.23",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.6",
    "@types/react": "^17.0.39",
    "autoprefixer": "^10.4.2",
    "graphql": "^16.3.0",
    "markdown-to-jsx": "^7.1.6",
    "preact": "^10.6.6",
    "preact-cli-plugin-netlify": "^1.6.0",
    "preact-render-to-string": "^5.1.20",
    "preact-router": "^4.0.1",
    "react": "npm:preact@^10.6.6",
    "react-dom": "npm:preact@^10.6.6"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  },
  "pnpm": {
    "overrides": {
      "ansi-regex@>2.1.1 <5.0.1": ">=5.0.1",
      "nth-check@<2.0.1": ">=2.0.1",
      "glob-parent@<5.1.2": ">=5.1.2",
      "postcss@<8.2.13": ">=8.2.13",
      "node-forge@<1.0.0": ">=1.0.0",
      "trim@<0.0.3": ">=0.0.3",
      "react@^15.0.0": "8.0.0",
      "cssnano@<5.0.0": ">=5.0.15"
    }
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "tailwindConfig": "tailwind.config.js",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
